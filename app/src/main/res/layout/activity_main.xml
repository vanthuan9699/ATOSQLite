<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/sp_loaichungtu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Thông tin chi tiết"
        android:textColor="#040404"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã CT : "

            android:textColor="#F60707"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ma_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#040404"
            android:textSize="25sp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chứng từ : "
            android:textColor="#F30101"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#040404"
            android:textSize="25sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_marginRight="5dp"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã giao dịch : "
            android:textColor="#FA0606"

            android:textSize="25sp" />

        <TextView
            android:id="@+id/gd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số chứng từ: "

            android:textColor="#040404"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/soct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày : "
            android:textColor="#040404"

            android:textSize="25sp" />

        <EditText
            android:id="@+id/ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã vật tư : "

            android:textColor="#040404"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/mavattu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"


        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã vị trí : "
            android:textColor="#040404"

            android:textSize="25sp" />

        <EditText
            android:id="@+id/mavitri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã lô : "
            android:textColor="#040404"

            android:textSize="25sp" />

        <EditText
            android:id="@+id/malo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#040404"

            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kho hàng : "

            android:textColor="#040404"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/khohang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#040404"

            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phiếu PO: "

            android:textColor="#040404"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/phieupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phiếu Y/C XH : "

            android:textColor="#040404"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ycxh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phiếu Y/C TH : "
            android:textColor="#040404"

            android:textSize="25sp" />

        <EditText
            android:id="@+id/ycth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textColor="#040404"

            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/trangthai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#040404"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#040404"
        android:background="#2CB5F3"
        android:text="LƯU" />


</LinearLayout>